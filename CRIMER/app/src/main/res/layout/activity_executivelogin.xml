<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arachnisapps.crimer.ExecutiveloginActivity">

   <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
       android:hint="Username"
       android:layout_above="@+id/password"
       android:layout_alignStart="@+id/textView"
       android:layout_alignEnd="@+id/textView" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/password"
        android:layout_above="@+id/QRbutton"
        android:layout_marginBottom="36dp"
        android:layout_alignStart="@+id/username"
        android:layout_alignEnd="@+id/username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:id="@+id/QRbutton"
        android:onClick="onclick"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/password"
        android:layout_alignEnd="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXECUTIVE LOGIN"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/maroon"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter the username and password provided to you by the administrator and the press PROCEED.\n\n You will then need to provide a second factor of authentication i.e. scan the barcode on your ID Card."
        android:id="@+id/textView2"
        android:textSize="14sp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_above="@+id/username" />

</RelativeLayout>
